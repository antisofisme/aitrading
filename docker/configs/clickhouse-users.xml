<?xml version="1.0"?>
<!-- ClickHouse Users Configuration for AI Trading Platform -->
<!-- Phase 1: Security-First User Management with Role-Based Access -->

<yandex>
    <users>
        <!-- Default user with restricted access -->
        <default>
            <password></password>
            <networks incl="networks" replace="replace">
                <ip>::/0</ip>
            </networks>
            <profile>default</profile>
            <quota>default</quota>
            <access_management>0</access_management>
        </default>

        <!-- AI Trading Platform application user -->
        <aitrading>
            <!-- Use environment variable for password -->
            <password_sha256_hex from_env="CLICKHOUSE_PASSWORD_SHA256"></password_sha256_hex>

            <!-- Network restrictions -->
            <networks>
                <!-- Allow from Docker internal networks -->
                <ip>172.20.0.0/16</ip>  <!-- Development network -->
                <ip>172.21.0.0/16</ip>  <!-- Production network -->
                <ip>127.0.0.1</ip>      <!-- Localhost -->
                <ip>::1</ip>            <!-- IPv6 localhost -->
            </networks>

            <!-- Profile and quota -->
            <profile>log_ingestion</profile>
            <quota>log_ingestion</quota>

            <!-- Database access -->
            <databases>
                <aitrading_logs>
                    <!-- Full access to logs database -->
                    <table>logs_hot</table>
                    <table>logs_warm</table>
                    <table>logs_cold</table>
                    <table>logs_unified</table>
                    <table>security_logs</table>
                    <table>trading_logs</table>
                    <table>storage_metrics</table>
                    <table>daily_cost_summary</table>
                    <table>performance_metrics</table>
                    <table>error_analytics</table>
                </aitrading_logs>
                <system>
                    <!-- Limited system database access -->
                    <table>query_log</table>
                    <table>part_log</table>
                    <table>metric_log</table>
                </system>
            </databases>

            <!-- Grants for specific operations -->
            <grants>
                <!-- Database operations -->
                <grant>SELECT ON aitrading_logs.*</grant>
                <grant>INSERT ON aitrading_logs.*</grant>
                <grant>ALTER TABLE ON aitrading_logs.*</grant>
                <grant>CREATE TABLE ON aitrading_logs.*</grant>
                <grant>DROP TABLE ON aitrading_logs.*</grant>

                <!-- System monitoring -->
                <grant>SELECT ON system.query_log</grant>
                <grant>SELECT ON system.part_log</grant>
                <grant>SELECT ON system.tables</grant>
                <grant>SELECT ON system.parts</grant>
                <grant>SELECT ON system.metrics</grant>

                <!-- Dictionary access -->
                <grant>CREATE DICTIONARY ON aitrading_logs.*</grant>
                <grant>DROP DICTIONARY ON aitrading_logs.*</grant>
            </grants>
        </aitrading>

        <!-- Analytics user for read-only queries -->
        <analytics>
            <password_sha256_hex from_env="CLICKHOUSE_ANALYTICS_PASSWORD_SHA256"></password_sha256_hex>

            <networks>
                <ip>172.20.0.0/16</ip>
                <ip>172.21.0.0/16</ip>
                <ip>127.0.0.1</ip>
            </networks>

            <profile>analytics</profile>
            <quota>analytics</quota>

            <!-- Read-only access -->
            <databases>
                <aitrading_logs>
                    <table>logs_unified</table>
                    <table>security_logs</table>
                    <table>trading_logs</table>
                    <table>storage_metrics</table>
                    <table>daily_cost_summary</table>
                    <table>performance_metrics</table>
                    <table>error_analytics</table>
                </aitrading_logs>
            </databases>

            <grants>
                <grant>SELECT ON aitrading_logs.*</grant>
                <grant>SELECT ON system.query_log</grant>
                <grant>SELECT ON system.tables</grant>
                <grant>SELECT ON system.parts</grant>
            </grants>
        </analytics>

        <!-- Real-time monitoring user -->
        <monitor>
            <password_sha256_hex from_env="CLICKHOUSE_MONITOR_PASSWORD_SHA256"></password_sha256_hex>

            <networks>
                <ip>172.20.0.0/16</ip>
                <ip>172.21.0.0/16</ip>
                <ip>127.0.0.1</ip>
            </networks>

            <profile>realtime</profile>
            <quota>default</quota>

            <!-- Limited access for monitoring -->
            <databases>
                <aitrading_logs>
                    <table>logs_hot</table>
                    <table>security_logs</table>
                    <table>performance_metrics</table>
                </aitrading_logs>
                <system>
                    <table>metrics</table>
                    <table>events</table>
                    <table>asynchronous_metrics</table>
                </system>
            </databases>

            <grants>
                <grant>SELECT ON aitrading_logs.logs_hot</grant>
                <grant>SELECT ON aitrading_logs.security_logs</grant>
                <grant>SELECT ON aitrading_logs.performance_metrics</grant>
                <grant>SELECT ON system.metrics</grant>
                <grant>SELECT ON system.events</grant>
                <grant>SELECT ON system.asynchronous_metrics</grant>
            </grants>
        </monitor>

        <!-- Administrative user for maintenance -->
        <admin>
            <password_sha256_hex from_env="CLICKHOUSE_ADMIN_PASSWORD_SHA256"></password_sha256_hex>

            <!-- Restricted networks for admin access -->
            <networks>
                <ip>127.0.0.1</ip>
                <ip>::1</ip>
                <!-- Add specific admin IPs here -->
            </networks>

            <profile>default</profile>
            <quota>default</quota>

            <!-- Full database access -->
            <databases>
                <aitrading_logs></aitrading_logs>
                <system></system>
                <information_schema></information_schema>
                <INFORMATION_SCHEMA></INFORMATION_SCHEMA>
            </databases>

            <!-- Full administrative grants -->
            <grants>
                <grant>SELECT ON *.*</grant>
                <grant>INSERT ON *.*</grant>
                <grant>ALTER ON *.*</grant>
                <grant>CREATE DATABASE ON *.*</grant>
                <grant>CREATE TABLE ON *.*</grant>
                <grant>CREATE VIEW ON *.*</grant>
                <grant>CREATE DICTIONARY ON *.*</grant>
                <grant>DROP DATABASE ON *.*</grant>
                <grant>DROP TABLE ON *.*</grant>
                <grant>DROP VIEW ON *.*</grant>
                <grant>DROP DICTIONARY ON *.*</grant>
                <grant>TRUNCATE ON *.*</grant>
                <grant>OPTIMIZE ON *.*</grant>
                <grant>SYSTEM ON *.*</grant>
                <grant>KILL QUERY ON *.*</grant>
                <grant>ACCESS MANAGEMENT</grant>
            </grants>

            <!-- Access management permissions -->
            <access_management>1</access_management>
        </admin>

        <!-- Backup user for automated backups -->
        <backup>
            <password_sha256_hex from_env="CLICKHOUSE_BACKUP_PASSWORD_SHA256"></password_sha256_hex>

            <networks>
                <ip>127.0.0.1</ip>
                <ip>::1</ip>
                <ip>172.20.0.0/16</ip>
                <ip>172.21.0.0/16</ip>
            </networks>

            <profile>default</profile>
            <quota>default</quota>

            <databases>
                <aitrading_logs></aitrading_logs>
            </databases>

            <grants>
                <grant>SELECT ON aitrading_logs.*</grant>
                <grant>BACKUP ON aitrading_logs.*</grant>
                <grant>RESTORE ON aitrading_logs.*</grant>
                <grant>SELECT ON system.tables</grant>
                <grant>SELECT ON system.parts</grant>
                <grant>SELECT ON system.databases</grant>
            </grants>
        </backup>
    </users>

    <!-- Profiles for different use cases -->
    <profiles>
        <default>
            <max_memory_usage>10000000000</max_memory_usage>
            <use_uncompressed_cache>1</use_uncompressed_cache>
            <load_balancing>random</load_balancing>
            <max_query_size>268435456</max_query_size>
            <max_ast_elements>50000</max_ast_elements>
            <max_expanded_ast_elements>500000</max_expanded_ast_elements>
            <readonly>0</readonly>
            <allow_ddl>1</allow_ddl>
        </default>

        <log_ingestion>
            <!-- Optimized for high-volume log ingestion -->
            <max_memory_usage>5000000000</max_memory_usage>
            <max_insert_block_size>1048576</max_insert_block_size>
            <max_insert_threads>8</max_insert_threads>
            <insert_quorum>0</insert_quorum>
            <insert_quorum_timeout>60000</insert_quorum_timeout>
            <select_sequential_consistency>0</select_sequential_consistency>
            <max_replica_delay_for_distributed_queries>300</max_replica_delay_for_distributed_queries>
            <fallback_to_stale_replicas_for_distributed_queries>1</fallback_to_stale_replicas_for_distributed_queries>
            <readonly>0</readonly>
            <allow_ddl>1</allow_ddl>

            <!-- Async inserts for better performance -->
            <async_insert>1</async_insert>
            <wait_for_async_insert>0</wait_for_async_insert>
            <async_insert_timeout>200</async_insert_timeout>
            <async_insert_max_data_size>10485760</async_insert_max_data_size>
            <async_insert_busy_timeout>200</async_insert_busy_timeout>
        </log_ingestion>

        <analytics>
            <!-- Optimized for complex analytical queries -->
            <max_memory_usage>20000000000</max_memory_usage>
            <max_threads>8</max_threads>
            <max_query_size>1073741824</max_query_size>
            <max_ast_elements>500000</max_ast_elements>
            <max_expanded_ast_elements>5000000</max_expanded_ast_elements>
            <max_execution_time>300</max_execution_time>
            <timeout_before_checking_execution_speed>10</timeout_before_checking_execution_speed>
            <max_rows_to_read>1000000000</max_rows_to_read>
            <max_bytes_to_read>100000000000</max_bytes_to_read>
            <readonly>1</readonly>
            <allow_ddl>0</allow_ddl>

            <!-- Query optimization -->
            <optimize_throw_if_noop>1</optimize_throw_if_noop>
            <optimize_on_insert>1</optimize_on_insert>
            <optimize_move_to_prewhere>1</optimize_move_to_prewhere>
            <enable_optimize_predicate_expression>1</enable_optimize_predicate_expression>
        </analytics>

        <realtime>
            <!-- Optimized for fast, real-time queries -->
            <max_memory_usage>1000000000</max_memory_usage>
            <max_execution_time>5</max_execution_time>
            <max_rows_to_read>1000000</max_rows_to_read>
            <max_bytes_to_read>1000000000</max_bytes_to_read>
            <timeout_before_checking_execution_speed>2</timeout_before_checking_execution_speed>
            <max_result_rows>100000</max_result_rows>
            <max_result_bytes>100000000</max_result_bytes>
            <readonly>1</readonly>
            <allow_ddl>0</allow_ddl>

            <!-- Fast query settings -->
            <prefer_localhost_replica>1</prefer_localhost_replica>
            <max_threads>4</max_threads>
            <max_distributed_connections>1024</max_distributed_connections>
        </realtime>
    </profiles>

    <!-- Quotas for resource management -->
    <quotas>
        <default>
            <interval>
                <duration>3600</duration>
                <queries>0</queries>
                <errors>0</errors>
                <result_rows>0</result_rows>
                <read_rows>0</read_rows>
                <execution_time>0</execution_time>
            </interval>
        </default>

        <log_ingestion>
            <interval>
                <duration>3600</duration>
                <queries>10000</queries>
                <errors>1000</errors>
                <result_rows>0</result_rows>
                <read_rows>0</read_rows>
                <execution_time>3600</execution_time>
            </interval>
        </log_ingestion>

        <analytics>
            <interval>
                <duration>3600</duration>
                <queries>1000</queries>
                <errors>100</errors>
                <result_rows>10000000</result_rows>
                <read_rows>100000000</read_rows>
                <execution_time>1800</execution_time>
            </interval>
        </analytics>
    </quotas>

    <!-- Network settings -->
    <networks>
        <ip>::/0</ip>
    </networks>
</yandex>