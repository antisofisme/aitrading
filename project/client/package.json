{
  "name": "aitrading-client",
  "version": "1.0.0",
  "description": "AI Trading Platform - Windows Desktop Client (Phase 1 Infrastructure Migration)",
  "main": "src/main.js",
  "scripts": {
    "start": "electron src/main.js",
    "dev": "nodemon --exec electron src/main.js",
    "build": "pkg src/main.js --out-path build/",
    "build:windows": "pkg src/main.js --targets node18-win-x64 --out-path build/windows/",
    "test": "node tests/simple-test.js",
    "test:jest": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "node tests/integration-test.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "install:mt5": "python -m pip install MetaTrader5",
    "setup": "npm install && npm run install:mt5",
    "clean": "rimraf build/ logs/ temp/",
    "start:backend": "cd ../backend && npm run start:all",
    "test:full": "npm run test:integration && npm run test:jest"
  },
  "dependencies": {
    "ws": "^8.14.2",
    "axios": "^1.6.2",
    "node-cron": "^3.0.3",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1",
    "electron": "^27.1.3",
    "electron-store": "^8.1.0",
    "win-dpapi": "^1.0.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "eslint": "^8.55.0",
    "pkg": "^5.8.1",
    "rimraf": "^5.0.5"
  },
  "pkg": {
    "assets": [
      "config/**/*",
      "security/**/*"
    ],
    "outputPath": "build"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "os": [
    "win32"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/aitrading-platform"
  },
  "keywords": [
    "trading",
    "mt5",
    "metatrader",
    "desktop",
    "windows",
    "client"
  ],
  "author": "AI Trading Platform Team",
  "license": "PROPRIETARY"
}