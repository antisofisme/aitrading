# AI Trading Platform - Plan2 Environment Configuration
# =======================================================

# ==================== ENVIRONMENT ====================
NODE_ENV=development
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# ==================== DATABASE PASSWORDS ====================
# PostgreSQL - Primary OLTP Database
POSTGRES_PASSWORD=ai_trading_secure_pass_2024

# ClickHouse - OLAP/Analytics Database
CLICKHOUSE_PASSWORD=clickhouse_secure_pass_2024
CLICKHOUSE_DB=aitrading_analytics
CLICKHOUSE_USER=default

# DragonflyDB - High-Performance Cache (Redis replacement)
DRAGONFLY_PASSWORD=dragonfly_secure_pass_2024

# ArangoDB - Graph Database
ARANGO_PASSWORD=ai_trading_graph_pass_2024
ARANGO_DB=aitrading_graph
ARANGO_USER=root


# ==================== DATABASE CONFIGURATION ====================

# PostgreSQL Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=ai_trading
POSTGRES_USER=ai_trading_user
POSTGRES_URL=postgresql://ai_trading_user:${POSTGRES_PASSWORD}@postgres:5432/ai_trading
POSTGRES_POOL_MAX=20
POSTGRES_POOL_MIN=2

# ClickHouse Configuration (Time-Series Analytics)
CLICKHOUSE_HOST=clickhouse
CLICKHOUSE_PORT=8123
CLICKHOUSE_URL=http://clickhouse:8123
CLICKHOUSE_POOL_MAX=10

# DragonflyDB Configuration (Redis replacement)
DRAGONFLY_HOST=dragonflydb
DRAGONFLY_PORT=6379
DRAGONFLY_URL=redis://dragonflydb:6379
DRAGONFLY_MAX_RETRIES=3
DRAGONFLY_RETRY_DELAY=100

# Weaviate Configuration (Vector/AI Database)
WEAVIATE_SCHEME=http
WEAVIATE_HOST=weaviate
WEAVIATE_PORT=8080
WEAVIATE_URL=http://weaviate:8080
WEAVIATE_API_KEY=

# ArangoDB Configuration (Graph Database)
ARANGO_URL=http://arangodb:8529
ARANGO_POOL_MAX=20


# ==================== STREAMING & MESSAGING ====================

# Redpanda Configuration (Kafka replacement)
REDPANDA_BROKERS=redpanda:9092
REDPANDA_SCHEMA_REGISTRY=http://redpanda:8081
REDPANDA_ADMIN_API=http://redpanda:9644

# ==================== SERVICE CONFIGURATION ====================

# Configuration Service
CONFIG_SERVICE_PORT=8012
FLOW_REGISTRY_ENABLED=true
FLOW_TRACKING_ENABLED=true
CHAIN_DEBUG_ENABLED=true
AI_ANALYTICS_ENABLED=true

# API Gateway
API_GATEWAY_PORT=3001

# Database Service
DATABASE_SERVICE_PORT=8008

# AI Orchestrator
AI_ORCHESTRATOR_PORT=8020

# Trading Engine
TRADING_ENGINE_PORT=9000

# ML Predictor
ML_PREDICTOR_PORT=8021

# Risk Analyzer
RISK_ANALYZER_PORT=8022

# Portfolio Manager
PORTFOLIO_MANAGER_PORT=9001

# Order Management
ORDER_MANAGEMENT_PORT=9002

# Data Bridge
DATA_BRIDGE_PORT=5001

# Central Hub
CENTRAL_HUB_PORT=7000

# Notification Service
NOTIFICATION_SERVICE_PORT=9003

# User Management
USER_MANAGEMENT_PORT=8010

# Billing Service
BILLING_SERVICE_PORT=8011

# Payment Service
PAYMENT_SERVICE_PORT=8013

# Compliance Monitor
COMPLIANCE_MONITOR_PORT=8014

# Backtesting Engine
BACKTESTING_ENGINE_PORT=8015

# Performance Analytics
PERFORMANCE_ANALYTICS_PORT=9100

# Usage Monitoring
USAGE_MONITORING_PORT=9101

# Revenue Analytics
REVENUE_ANALYTICS_PORT=9102

# Chain Debug System
CHAIN_DEBUG_PORT=8030

# AI Chain Analytics
AI_CHAIN_ANALYTICS_PORT=8031

# ==================== SECURITY CONFIGURATION ====================

# JWT Configuration
JWT_SECRET=ai_trading_jwt_super_secret_key_change_in_production_2024
JWT_EXPIRES_IN=24h

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=*

# ==================== PERFORMANCE SETTINGS ====================

# Middleware Configuration
MIDDLEWARE_TIMEOUT_MS=500
MAX_FLOW_TRACKING_DEPTH=10
HEALTH_CHECK_INTERVAL_MS=30000

# Connection Pooling
DB_POOL_MAX=20
DB_POOL_MIN=2
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_ACQUIRE_TIMEOUT=60000

# ==================== MONITORING CONFIGURATION ====================

# Metrics & Monitoring
METRICS_ENABLED=true
PERFORMANCE_MONITORING_ENABLED=true
ERROR_TRACKING_ENABLED=true

# Prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_PORT=3000
GRAFANA_PASSWORD=admin123

# ==================== EXTERNAL API KEYS ====================

# Trading Exchange APIs
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here
COINBASE_API_KEY=your_coinbase_api_key_here
COINBASE_SECRET_KEY=your_coinbase_secret_key_here

# ==================== NOTIFICATION CONFIGURATION ====================

# Telegram Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here

# ==================== DEVELOPMENT SETTINGS ====================

# Development Features
ENABLE_SWAGGER=true
ENABLE_DEBUG_LOGGING=true
ENABLE_PERFORMANCE_PROFILING=true

# Hot Reload
ENABLE_HOT_RELOAD=true

# Testing
TEST_DB_URL=postgresql://ai_trading_user:${POSTGRES_PASSWORD}@postgres:5432/ai_trading_test

# ==================== LOAD BALANCER ====================

# Nginx Configuration
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# ==================== BACKUP & RECOVERY ====================

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# ==================== ADDITIONAL FEATURES ====================

# AI/ML Configuration
ML_MODEL_PATH=/app/models
ML_CACHE_SIZE=1000

# Feature Flags
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_REAL_TIME_TRADING=true
FEATURE_RISK_MANAGEMENT=true
FEATURE_PORTFOLIO_OPTIMIZATION=true

# Cache Configuration
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=10000

# WebSocket Configuration
WS_ENABLED=true
WS_PORT=8080
WS_MAX_CONNECTIONS=1000

# File Upload Configuration
MAX_FILE_SIZE=10MB
UPLOAD_DIR=/app/uploads

# Localization
DEFAULT_LOCALE=en-US
SUPPORTED_LOCALES=en-US,es-ES,fr-FR,de-DE

# ==================== DOCKER COMPOSE OVERRIDES ====================

# Docker Compose Configuration
COMPOSE_PROJECT_NAME=ai-trading-plan2
COMPOSE_FILE=docker-compose-plan2.yml

# Resource Limits
POSTGRES_MEMORY=2g
CLICKHOUSE_MEMORY=4g
DRAGONFLY_MEMORY=2g
WEAVIATE_MEMORY=2g
ARANGODB_MEMORY=2g
REDPANDA_MEMORY=2g