{
  "name": "aitrading-project",
  "version": "1.0.0",
  "description": "AI Trading System with Flow-Aware Error Handling",
  "main": "index.js",
  "scripts": {
    "start": "node backend/api-gateway/server.js",
    "dev": "nodemon backend/api-gateway/server.js",
    "build": "npm run build:frontend && npm run build:services",
    "build:frontend": "cd frontend && npm run build",
    "build:services": "echo 'Building microservices...'",
    "test": "node scripts/run-flow-tests.js",
    "test:unit": "mocha 'tests/unit/**/*.test.js' --timeout 10000 --recursive",
    "test:integration": "mocha 'tests/integration/**/*.test.js' --timeout 30000 --recursive",
    "test:performance": "mocha 'tests/performance/**/*.test.js' --timeout 60000 --recursive",
    "test:e2e": "mocha 'tests/e2e/**/*.test.js' --timeout 120000 --recursive",
    "test:coverage": "nyc npm run test:unit",
    "test:watch": "mocha 'tests/**/*.test.js' --watch --recursive",
    "test:flow-only": "npm run test:unit && npm run test:integration",
    "test:quick": "node scripts/run-flow-tests.js --unit-only",
    "lint": "eslint . --ext .js --fix",
    "lint:check": "eslint . --ext .js",
    "typecheck": "echo 'TypeScript checking would go here'",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "services:start": "concurrently \"npm run start:config\" \"npm run start:db\" \"npm run start:trading\"",
    "start:config": "cd backend/configuration-service && npm start",
    "start:db": "cd backend/database-service && npm start",
    "start:trading": "cd backend/trading-engine && npm start",
    "start:payment": "cd backend/payment-service && npm start",
    "install:all": "npm install && npm run install:services && npm run install:frontend",
    "install:services": "cd backend/configuration-service && npm install && cd ../database-service && npm install && cd ../trading-engine && npm install && cd ../payment-service && npm install",
    "install:frontend": "cd frontend && npm install",
    "clean": "rimraf node_modules backend/*/node_modules frontend/node_modules logs/*.log data/test",
    "clean:logs": "rimraf logs/*.log",
    "clean:test": "rimraf data/test",
    "docs:generate": "jsdoc -c jsdoc.conf.json",
    "docs:serve": "http-server docs -p 8080",
    "migrate:up": "knex migrate:latest --env test",
    "migrate:down": "knex migrate:rollback --env test",
    "seed:test": "knex seed:run --env test",
    "db:setup": "npm run migrate:up && npm run seed:test",
    "flow:validate": "node scripts/validate-flows.js",
    "flow:analyze": "node scripts/analyze-flow-performance.js",
    "monitoring:start": "cd src/monitoring && node index.js",
    "benchmark": "node scripts/run-flow-tests.js --performance-only",
    "ci:test": "npm run test:unit && npm run test:integration",
    "ci:deploy": "echo 'Deployment script would go here'",
    "pre-commit": "npm run lint && npm run test:quick"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "dotenv": "^16.3.1",
    "winston": "^3.10.0",
    "joi": "^17.9.2",
    "uuid": "^9.0.0",
    "pg": "^8.11.0",
    "redis": "^4.6.7",
    "clickhouse": "^2.6.0",
    "ws": "^8.13.0",
    "jsonwebtoken": "^9.0.1",
    "bcryptjs": "^2.4.3",
    "express-rate-limit": "^6.8.1",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "mocha": "^10.2.0",
    "chai": "^4.3.7",
    "sinon": "^15.2.0",
    "supertest": "^6.3.3",
    "nyc": "^15.1.0",
    "nodemon": "^3.0.1",
    "eslint": "^8.44.0",
    "eslint-config-node": "^4.1.0",
    "concurrently": "^8.2.0",
    "rimraf": "^5.0.1",
    "jsdoc": "^4.0.2",
    "http-server": "^14.1.1",
    "knex": "^2.5.0"
  },
  "nyc": {
    "exclude": [
      "tests/**",
      "coverage/**",
      "node_modules/**",
      "scripts/**"
    ],
    "reporter": [
      "text",
      "html",
      "json"
    ],
    "report-dir": "coverage",
    "check-coverage": true,
    "lines": 80,
    "functions": 80,
    "branches": 75,
    "statements": 80
  },
  "mocha": {
    "require": [
      "dotenv/config"
    ],
    "recursive": true,
    "exit": true
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true,
      "mocha": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "off",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "keywords": [
    "ai",
    "trading",
    "microservices",
    "flow-tracking",
    "error-handling",
    "database",
    "postgresql",
    "clickhouse",
    "redis"
  ],
  "author": "AI Trading Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/aitrading-project.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/aitrading-project/issues"
  },
  "homepage": "https://github.com/your-org/aitrading-project#readme",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}