# Environment Configuration
NODE_ENV=development
PORT=3003

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/payment_service

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Midtrans Configuration (Sandbox)
MIDTRANS_SERVER_KEY_SANDBOX=your_sandbox_server_key
MIDTRANS_CLIENT_KEY_SANDBOX=your_sandbox_client_key

# Midtrans Configuration (Production)
MIDTRANS_SERVER_KEY_PROD=your_production_server_key
MIDTRANS_CLIENT_KEY_PROD=your_production_client_key

# Midtrans Iris API (Optional - for payouts)
MIDTRANS_IRIS_KEY=your_iris_api_key

# Webhook Configuration
MIDTRANS_WEBHOOK_URL=https://yourdomain.com/api/payments/webhook
PAYMENT_FINISH_URL=https://yourdomain.com/payment/success
PAYMENT_UNFINISH_URL=https://yourdomain.com/payment/pending
PAYMENT_ERROR_URL=https://yourdomain.com/payment/failed

# E-Wallet Callback URLs
GOPAY_CALLBACK_URL=https://yourdomain.com/payment/gopay/callback
OVO_CALLBACK_URL=https://yourdomain.com/payment/ovo/callback
DANA_CALLBACK_URL=https://yourdomain.com/payment/dana/callback
LINKAJA_CALLBACK_URL=https://yourdomain.com/payment/linkaja/callback
SHOPEEPAY_CALLBACK_URL=https://yourdomain.com/payment/shopeepay/callback

# Security Configuration
JWT_SECRET=your_super_secret_jwt_key_here
SERVICE_TOKEN=your_inter_service_communication_token

# Admin Security
ADMIN_ALLOWED_IPS=127.0.0.1,::1,your_admin_ip
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://trading.neliti.com

# Service Integration URLs
USER_MANAGEMENT_URL=http://localhost:3001
SUBSCRIPTION_SERVICE_URL=http://localhost:3002
BILLING_SERVICE_URL=http://localhost:3004
NOTIFICATION_SERVICE_URL=http://localhost:3005

# Logging Configuration
LOG_LEVEL=info

# Rate Limiting (requests per window)
API_RATE_LIMIT=100
PAYMENT_RATE_LIMIT=10
WEBHOOK_RATE_LIMIT=50

# PCI DSS Compliance Settings
ENABLE_REQUEST_LOGGING=true
ENABLE_AUDIT_TRAIL=true
ENABLE_ENCRYPTION=true

# Indonesian Compliance
ENFORCE_INDONESIAN_VALIDATION=true
REQUIRE_BILLING_ADDRESS=true

# Monitoring and Analytics
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_TRACKING=true

# Development/Testing
ENABLE_TEST_MODE=false
SKIP_WEBHOOK_VERIFICATION=false