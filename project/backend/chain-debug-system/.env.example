# Chain Debug System Configuration
NODE_ENV=development
PORT=8025

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/aitrading_db
REDIS_URL=redis://localhost:6379

# AI Services Integration
AI_ORCHESTRATION_URL=http://localhost:8020
AI_ORCHESTRATOR_URL=http://localhost:8021
ML_ENSEMBLE_URL=http://localhost:8022

# Monitoring Configuration
PROMETHEUS_PORT=9091
ALERT_WEBHOOK_URL=http://localhost:3000/webhooks/alerts

# Security
JWT_SECRET=your-super-secret-jwt-key
API_KEY=your-api-key-here

# Chain Monitoring Settings
CHAIN_HEALTH_CHECK_INTERVAL=10000
ANOMALY_DETECTION_THRESHOLD=0.8
MAX_CHAIN_TRACE_DEPTH=100
RECOVERY_TIMEOUT=300000

# ML Model Configuration
ML_MODEL_PATH=./models
ANOMALY_MODEL_VERSION=1.0.0
PATTERN_RECOGNITION_MODEL=chain_patterns_v1

# Circuit Breaker Configuration
CIRCUIT_BREAKER_TIMEOUT=60000
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_RESET_TIMEOUT=300000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=./logs/chain-debug.log