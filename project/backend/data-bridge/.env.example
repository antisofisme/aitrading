# Server Configuration
PORT=3001
HOST=0.0.0.0
NODE_ENV=development

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# MT5 Configuration
MT5_SERVER=localhost
MT5_PORT=8222
MT5_LOGIN=your_mt5_login
MT5_PASSWORD=your_mt5_password
MT5_TIMEOUT=30000
MT5_RECONNECT_INTERVAL=5000
MT5_MAX_RECONNECT_ATTEMPTS=10

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=data-bridge:

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/data-bridge.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
LOG_FORMAT=json

# WebSocket Configuration
WS_MAX_CONNECTIONS=1000
WS_PING_INTERVAL=30000
WS_TIMEOUT=60000
WS_COMPRESSION=true

# Data Configuration
DATA_BUFFER_SIZE=1000
DATA_FLUSH_INTERVAL=1000
DATA_RETENTION_PERIOD=86400000
DATA_COMPRESSION_LEVEL=6

# Security Configuration
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
ALLOWED_IPS=
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRATION=1h

# Monitoring Configuration
HEALTH_CHECK_INTERVAL=60000
METRICS_ENABLED=true
ALERTING_ENABLED=true