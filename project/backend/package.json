{
  "name": "forexgold-backend",
  "version": "2.0.0",
  "description": "Forex & Gold Trading Platform Backend - Indonesian Market with Midtrans Integration",
  "main": "index.js",
  "scripts": {
    "start": "docker-compose up -d",
    "stop": "docker-compose down",
    "dev": "docker-compose -f docker-compose.dev.yml up -d",
    "dev-stop": "docker-compose -f docker-compose.dev.yml down",
    "production": "NODE_ENV=production docker-compose up -d",
    "logs": "docker-compose logs -f",
    "health": "node scripts/test-health-checks.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:integration": "jest --testMatch='**/integration/**/*.test.js'",
    "build": "npm run test && npm run health",
    "validate-forex-gold": "npm run health && echo 'Forex & Gold platform validation complete'",
    "trading-engines": "docker-compose logs -f forex-engine gold-engine risk-management",
    "payment-logs": "docker-compose logs -f payment-gateway",
    "api-gateway": "cd api-gateway && npm start",
    "central-hub": "cd central-hub && node src/server.js",
    "database-service": "cd database-service && node src/server.js",
    "data-bridge": "cd data-bridge && node src/server.js"
  },
  "keywords": [
    "forex-trading",
    "gold-trading",
    "microservices",
    "high-frequency-trading",
    "midtrans-integration",
    "indonesian-market",
    "mt5-integration",
    "trading-platform"
  ],
  "author": "ForexGold Indonesia Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "colors": "^1.4.0",
    "express": "^4.18.2",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "platformStatus": {
    "tradingMode": "FOREX_GOLD",
    "paymentIntegration": "MIDTRANS_READY",
    "highFrequencyTrading": "OPTIMIZED",
    "indonesianLocalization": "COMPLETE",
    "mt5Integration": "ENHANCED",
    "riskManagement": "ACTIVE",
    "containerOptimization": "COMPLETE",
    "readyForProduction": true,
    "completedDate": "2024-09-22",
    "validationScript": "npm run validate-forex-gold",
    "tradingEngines": {
      "forex": "ACTIVE",
      "gold": "ACTIVE",
      "risk": "ACTIVE"
    },
    "paymentMethods": {
      "bankTransfer": "ENABLED",
      "gopay": "ENABLED",
      "ovo": "ENABLED",
      "dana": "ENABLED",
      "shopeepay": "ENABLED"
    }
  }
}