# Level 4 Intelligence - Environment Configuration
# Copy this file to .env and customize for your environment

# ================================
# LEVEL 4 AI/ML SERVICE CONFIGURATION
# ================================

# Node Environment
NODE_ENV=development

# Log Level (error, warn, info, debug)
LOG_LEVEL=info

# CORS Origins (comma separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080

# ================================
# SERVICE PORTS (Level 4)
# ================================

# Core AI/ML Services
FEATURE_ENG_PORT=8011
CONFIG_SERVICE_PORT=8012
ML_AUTOML_PORT=8013
PATTERN_VALIDATOR_PORT=8015
TELEGRAM_SERVICE_PORT=8016
INFERENCE_ENGINE_PORT=8017
LEVEL4_ORCHESTRATOR_PORT=8020
ML_ENSEMBLE_PORT=8021
BACKTESTING_PORT=8024

# Analytics Services
PERFORMANCE_ANALYTICS_PORT=8002
REVENUE_ANALYTICS_PORT=8026
USAGE_MONITORING_PORT=8027
COMPLIANCE_MONITOR_PORT=8040

# ================================
# DATABASE CONFIGURATION
# ================================

# PostgreSQL
DATABASE_URL=postgresql://postgres:password@localhost:5432/aitrading
POSTGRES_DB=aitrading
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# Redis
REDIS_URL=redis://localhost:6379

# ================================
# SECURITY CONFIGURATION
# ================================

# Encryption Key (32 characters for AES-256)
ENCRYPTION_KEY=your-32-char-encryption-key-here

# JWT Configuration (if using authentication)
JWT_SECRET=your-jwt-secret-key-change-this
JWT_EXPIRY=24h

# ================================
# AI/ML PERFORMANCE TARGETS
# ================================

# AI Accuracy Target (Level 4 requirement: >65%)
AI_ACCURACY_TARGET=0.65

# Inference Time Target (Level 4 requirement: <15ms)
INFERENCE_TARGET_MS=15

# Decision Making Target (<10ms)
DECISION_TARGET_MS=10

# Data Processing Rate (Level 3 input: 50+ TPS)
MIN_DATA_STREAM_TPS=50

# ================================
# EXTERNAL INTEGRATIONS
# ================================

# Telegram Bot (for notifications)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here

# Level 3 Data Stream URL
LEVEL3_DATA_STREAM_URL=http://localhost:8001

# Configuration for Level 1-2 services
API_GATEWAY_URL=http://localhost:8000
AUTH_SERVICE_URL=http://localhost:8001
TRADING_SERVICE_URL=http://localhost:8002
HUB_SERVICE_URL=http://localhost:8003

# ================================
# FEATURE ENGINEERING CONFIG
# ================================

# Technical Indicators
DEFAULT_INDICATORS=RSI,MACD,SMA,EMA,BollingerBands

# Feature Cache TTL (seconds)
FEATURE_CACHE_TTL=300

# User-specific feature processing
USER_FEATURE_ISOLATION=true

# ================================
# ML/AI MODEL CONFIGURATION
# ================================

# AutoML Settings
HYPERPARAMETER_OPTIMIZATION=true
TRANSFER_LEARNING_ENABLED=true
FINBERT_INTEGRATION=true

# Model Training
MAX_TRAINING_TIME=3600
MODEL_ACCURACY_THRESHOLD=0.65
ENSEMBLE_MIN_MODELS=3

# Model Deployment
AUTO_MODEL_DEPLOYMENT=false
MODEL_VERSION_CONTROL=true

# ================================
# MULTI-TENANT CONFIGURATION
# ================================

# Tenant Isolation
TENANT_DATA_ISOLATION=true
PER_TENANT_MODELS=true
TENANT_RATE_LIMITING=true

# User Quotas
DEFAULT_USER_QUOTA=1000
QUOTA_RESET_INTERVAL=daily
PREMIUM_USER_MULTIPLIER=10

# ================================
# PERFORMANCE MONITORING
# ================================

# Analytics Retention
ANALYTICS_RETENTION_DAYS=90
PERFORMANCE_METRICS_INTERVAL=60

# Real-time Monitoring
REALTIME_UPDATE_INTERVAL=5000
PERFORMANCE_ALERT_THRESHOLD=100

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEARTBEAT_INTERVAL=30000

# ================================
# COMPLIANCE & SECURITY
# ================================

# Audit Configuration
AUDIT_RETENTION_DAYS=2555  # 7 years
COMPLIANCE_CHECK_INTERVAL=3600

# Security Settings
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX=100
REQUEST_TIMEOUT=30000

# Data Protection
ENCRYPT_USER_DATA=true
ANONYMIZE_LOGS=true
GDPR_COMPLIANCE=true

# ================================
# DEVELOPMENT/DEBUGGING
# ================================

# Debug Mode
DEBUG_MODE=false
VERBOSE_LOGGING=false

# Development URLs (for testing)
DEV_FRONTEND_URL=http://localhost:3000
DEV_API_URL=http://localhost:8000

# Mock Data (for development)
USE_MOCK_DATA=false
MOCK_AI_RESPONSES=false

# Performance Testing
LOAD_TEST_MODE=false
STRESS_TEST_ENABLED=false

# ================================
# DOCKER CONFIGURATION
# ================================

# Docker Compose Override
COMPOSE_PROJECT_NAME=aitrading-level4
COMPOSE_FILE=docker-compose.level4.yml

# Container Resources
MAX_MEMORY=2g
MAX_CPU=2.0

# Volume Mounts
LOGS_VOLUME=./logs
DATA_VOLUME=./data
MODELS_VOLUME=./models

# ================================
# LEVEL 4 INTEGRATION SETTINGS
# ================================

# Service Discovery
SERVICE_REGISTRY_URL=http://localhost:8003
SERVICE_HEALTH_CHECK=true

# Inter-service Communication
SERVICE_TIMEOUT=5000
RETRY_ATTEMPTS=3
CIRCUIT_BREAKER_ENABLED=true

# Event Streaming
EVENT_STREAM_ENABLED=true
WEBSOCKET_ENABLED=true
REAL_TIME_UPDATES=true

# ================================
# BACKUP & RECOVERY
# ================================

# Backup Configuration
AUTO_BACKUP_ENABLED=false
BACKUP_INTERVAL=daily
BACKUP_RETENTION=30

# Model Backup
MODEL_BACKUP_ENABLED=true
MODEL_VERSIONING=true

# Data Recovery
DISASTER_RECOVERY_ENABLED=false
CROSS_REGION_BACKUP=false