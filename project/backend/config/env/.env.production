# Forex & Gold Trading Platform - Production Environment
# Indonesian Market Configuration

# =============================================================================
# GENERAL CONFIGURATION
# =============================================================================
NODE_ENV=production
LOG_LEVEL=warn
TZ=Asia/Jakarta

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================
TRADING_MODE=FOREX_GOLD
BASE_CURRENCY=IDR
LOCALE=id_ID
TIMEZONE=Asia/Jakarta
TRADING_HOURS_START=07:00
TRADING_HOURS_END=17:00
HIGH_FREQUENCY_ENABLED=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_DB=forexgold_prod
POSTGRES_USER=forexgold_user
POSTGRES_PASSWORD=your-super-secure-production-password
POSTGRES_MULTIPLE_DATABASES=forex,gold,analytics,payments,logs

MONGO_USERNAME=forexgold_admin
MONGO_PASSWORD=your-super-secure-mongo-password
MONGO_DATABASE=forex_gold_logs

REDIS_PASSWORD=your-super-secure-redis-password

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
JWT_SECRET=your-super-secure-jwt-secret-key-minimum-32-characters
SERVICE_SECRET=your-super-secure-service-communication-secret

# =============================================================================
# MIDTRANS PAYMENT CONFIGURATION
# =============================================================================
MIDTRANS_SERVER_KEY=your-production-midtrans-server-key
MIDTRANS_CLIENT_KEY=your-production-midtrans-client-key
MIDTRANS_MERCHANT_ID=your-midtrans-merchant-id
MIDTRANS_IS_PRODUCTION=true
MIDTRANS_NOTIFICATION_URL=https://your-domain.com/api/payments/midtrans/notification

# Indonesian Payment Methods
BANK_TRANSFER_ENABLED=true
GOPAY_ENABLED=true
OVO_ENABLED=true
DANA_ENABLED=true
SHOPEEPAY_ENABLED=true

# =============================================================================
# MT5 TRADING CONFIGURATION
# =============================================================================
MT5_HOST=your-production-mt5-server.com
MT5_PORT=443
MT5_LOGIN=your-mt5-login
MT5_PASSWORD=your-mt5-password
MT5_SERVER=your-mt5-server-name

# Trading Symbols
FOREX_SYMBOLS=EURUSD,GBPUSD,USDJPY,AUDUSD,USDCAD,NZDUSD,USDCHF,EURJPY,GBPJPY,AUDJPY
GOLD_SYMBOLS=XAUUSD,XAGUSD

# High-Frequency Trading Settings
TICK_DATA_ENABLED=true
REAL_TIME_QUOTES=true
TICK_PROCESSING_INTERVAL=50
MAX_CONCURRENT_TRADES=2000

# =============================================================================
# RISK MANAGEMENT
# =============================================================================
MAX_RISK_EXPOSURE=0.05
STOP_LOSS_THRESHOLD=0.02
MARGIN_CALL_LEVEL=0.3

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================
# Telegram
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_WEBHOOK_URL=https://your-domain.com/api/notifications/telegram/webhook
TELEGRAM_WEBHOOK_SECRET=your-telegram-webhook-secret

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-app-password

# SMS (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# COMPANY INFORMATION
# =============================================================================
COMPANY_NAME=ForexGold Indonesia
COMPANY_ADDRESS=Jakarta, Indonesia
BASE_URL=https://your-production-domain.com
CURRENCY=IDR
TAX_RATE=11

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=your-secure-grafana-password

# =============================================================================
# RATE LIMITING (High-Frequency Optimized)
# =============================================================================
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=5000

# =============================================================================
# INVOICE CONFIGURATION
# =============================================================================
INVOICE_LOGO_URL=https://your-domain.com/assets/logo.png