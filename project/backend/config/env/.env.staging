# Forex & Gold Trading Platform - Staging Environment
# Indonesian Market Configuration

# =============================================================================
# GENERAL CONFIGURATION
# =============================================================================
NODE_ENV=staging
LOG_LEVEL=info
TZ=Asia/Jakarta

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================
TRADING_MODE=FOREX_GOLD
BASE_CURRENCY=IDR
LOCALE=id_ID
TIMEZONE=Asia/Jakarta
TRADING_HOURS_START=07:00
TRADING_HOURS_END=17:00
HIGH_FREQUENCY_ENABLED=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_DB=forexgold_staging
POSTGRES_USER=forexgold_staging_user
POSTGRES_PASSWORD=staging-secure-password
POSTGRES_MULTIPLE_DATABASES=forex,gold,analytics,payments,logs

MONGO_USERNAME=staging_admin
MONGO_PASSWORD=staging-secure-mongo-password
MONGO_DATABASE=forex_gold_logs

REDIS_PASSWORD=staging-secure-redis-password

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
JWT_SECRET=staging-jwt-secret-key-secure-32-characters
SERVICE_SECRET=staging-service-communication-secret

# =============================================================================
# MIDTRANS PAYMENT CONFIGURATION (SANDBOX)
# =============================================================================
MIDTRANS_SERVER_KEY=SB-Mid-server-your-staging-server-key
MIDTRANS_CLIENT_KEY=SB-Mid-client-your-staging-client-key
MIDTRANS_MERCHANT_ID=your-staging-merchant-id
MIDTRANS_IS_PRODUCTION=false
MIDTRANS_NOTIFICATION_URL=https://staging.your-domain.com/api/payments/midtrans/notification

# Indonesian Payment Methods
BANK_TRANSFER_ENABLED=true
GOPAY_ENABLED=true
OVO_ENABLED=true
DANA_ENABLED=true
SHOPEEPAY_ENABLED=true

# =============================================================================
# MT5 TRADING CONFIGURATION (DEMO)
# =============================================================================
MT5_HOST=mt5-staging-server.com
MT5_PORT=443
MT5_LOGIN=staging-login
MT5_PASSWORD=staging-password
MT5_SERVER=staging-server

# Trading Symbols
FOREX_SYMBOLS=EURUSD,GBPUSD,USDJPY,AUDUSD,USDCAD,NZDUSD,USDCHF
GOLD_SYMBOLS=XAUUSD,XAGUSD

# High-Frequency Trading Settings
TICK_DATA_ENABLED=true
REAL_TIME_QUOTES=true
TICK_PROCESSING_INTERVAL=100
MAX_CONCURRENT_TRADES=1000

# =============================================================================
# RISK MANAGEMENT
# =============================================================================
MAX_RISK_EXPOSURE=0.08
STOP_LOSS_THRESHOLD=0.03
MARGIN_CALL_LEVEL=0.4

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================
# Telegram (Staging Bot)
TELEGRAM_BOT_TOKEN=staging-bot-token
TELEGRAM_WEBHOOK_URL=https://staging.your-domain.com/api/notifications/telegram/webhook
TELEGRAM_WEBHOOK_SECRET=staging-webhook-secret

# Email (Staging SMTP)
SMTP_HOST=smtp.staging-provider.com
SMTP_PORT=587
SMTP_USER=staging-email@your-domain.com
SMTP_PASSWORD=staging-email-password

# SMS (Twilio Staging)
TWILIO_ACCOUNT_SID=staging-account-sid
TWILIO_AUTH_TOKEN=staging-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# COMPANY INFORMATION
# =============================================================================
COMPANY_NAME=ForexGold Indonesia (STAGING)
COMPANY_ADDRESS=Jakarta, Indonesia
BASE_URL=https://staging.your-domain.com
CURRENCY=IDR
TAX_RATE=11

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=staging-grafana-password

# =============================================================================
# RATE LIMITING (Production-like)
# =============================================================================
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=3000

# =============================================================================
# INVOICE CONFIGURATION
# =============================================================================
INVOICE_LOGO_URL=https://staging.your-domain.com/assets/logo.png