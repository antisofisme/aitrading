# AI Trading Platform - Environment Configuration
# Copy this file to .env and update values for your environment

# =============================================================================
# ENVIRONMENT
# =============================================================================
NODE_ENV=production
LOG_LEVEL=info
DEBUG=aitrading:*

# =============================================================================
# SERVICE DISCOVERY
# =============================================================================
CONSUL_HOST=consul
CONSUL_PORT=8500
CONSUL_TOKEN=

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL (Primary Database)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=aitrading
POSTGRES_USER=postgres
POSTGRES_PASSWORD=aitrading2024
POSTGRES_MULTIPLE_DATABASES=trading,analytics,logs
POSTGRES_SSL=false
POSTGRES_POOL_MIN=5
POSTGRES_POOL_MAX=20

# MongoDB (Logs and Configuration)
MONGO_HOST=mongodb
MONGO_PORT=27017
MONGO_USERNAME=admin
MONGO_PASSWORD=aitrading2024
MONGO_DATABASE=aitrading_logs
MONGO_AUTH_SOURCE=admin

# Redis (Cache and Sessions)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=aitrading2024
REDIS_DB=0
REDIS_CLUSTER_ENABLED=false

# =============================================================================
# APPLICATION SERVICES
# =============================================================================

# API Gateway
API_GATEWAY_PORT=8000
API_GATEWAY_ADMIN_PORT=8001
API_GATEWAY_HOST=0.0.0.0

# Central Hub
CENTRAL_HUB_PORT=8002
CENTRAL_HUB_ADMIN_PORT=8003
CENTRAL_HUB_HOST=0.0.0.0

# Database Service
DATABASE_SERVICE_PORT=8004
DATABASE_SERVICE_ADMIN_PORT=8005
DATABASE_SERVICE_HOST=0.0.0.0

# Data Bridge
DATA_BRIDGE_PORT=8006
DATA_BRIDGE_ADMIN_PORT=8007
DATA_BRIDGE_HOST=0.0.0.0

# =============================================================================
# SECURITY
# =============================================================================

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=24h
JWT_ISSUER=aitrading-platform
JWT_AUDIENCE=aitrading-users

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:8080
CORS_CREDENTIALS=true

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================

# MT5 Configuration
MT5_HOST=mt5-server
MT5_PORT=443
MT5_LOGIN=
MT5_PASSWORD=
MT5_SERVER=
MT5_TIMEOUT=30000

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@aitrading.platform

# Telegram Bot (for notifications)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================

# Prometheus
PROMETHEUS_HOST=prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_HOST=grafana
GRAFANA_PORT=3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=aitrading2024

# Elasticsearch
ELASTICSEARCH_HOST=elasticsearch
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# APM Server
APM_SERVER_URL=http://apm-server:8200
APM_SECRET_TOKEN=
APM_SERVICE_NAME=aitrading-platform

# =============================================================================
# PERFORMANCE & SCALING
# =============================================================================

# Worker Processes
WORKER_PROCESSES=auto
CLUSTER_WORKERS=4

# Memory Limits
MEMORY_LIMIT=512MB
HEAP_SIZE=256MB

# Connection Pools
DB_POOL_SIZE=20
REDIS_POOL_SIZE=10

# Cache TTL
CACHE_DEFAULT_TTL=3600
CACHE_AUTH_TTL=1800
CACHE_DATA_TTL=300

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development Database (override in .env.development)
DEV_POSTGRES_HOST=postgres-dev
DEV_POSTGRES_PORT=5432
DEV_POSTGRES_DB=aitrading_dev
DEV_POSTGRES_USER=postgres
DEV_POSTGRES_PASSWORD=dev123

DEV_REDIS_HOST=redis-dev
DEV_REDIS_PORT=6379
DEV_REDIS_PASSWORD=dev123

# Development Features
HOT_RELOAD=true
AUTO_MIGRATE=true
SEED_DATA=true
MOCK_EXTERNAL_APIS=true

# =============================================================================
# TESTING
# =============================================================================

# Test Database
TEST_POSTGRES_HOST=postgres-test
TEST_POSTGRES_PORT=5432
TEST_POSTGRES_DB=aitrading_test
TEST_POSTGRES_USER=postgres
TEST_POSTGRES_PASSWORD=test123

TEST_REDIS_HOST=redis-test
TEST_REDIS_PORT=6379
TEST_REDIS_PASSWORD=test123

# Test Configuration
TEST_TIMEOUT=30000
TEST_PARALLEL=true
TEST_COVERAGE_THRESHOLD=80

# =============================================================================
# BACKUP & DISASTER RECOVERY
# =============================================================================

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=
BACKUP_S3_ACCESS_KEY=
BACKUP_S3_SECRET_KEY=
BACKUP_S3_REGION=us-east-1

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Feature Toggles
FEATURE_AI_ANALYTICS=true
FEATURE_ADVANCED_TRADING=false
FEATURE_TELEGRAM_INTEGRATION=false
FEATURE_BACKTESTING=false
FEATURE_REAL_TIME_DASHBOARD=true
FEATURE_MOBILE_API=false

# =============================================================================
# COMPLIANCE & AUDIT
# =============================================================================

# Audit Logging
AUDIT_ENABLED=true
AUDIT_LEVEL=info
AUDIT_RETENTION_DAYS=365

# Data Privacy
GDPR_COMPLIANCE=true
DATA_ENCRYPTION=true
PII_MASKING=true

# Regulatory
REGULATORY_ENVIRONMENT=development
COMPLIANCE_REPORTING=false