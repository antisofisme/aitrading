# Trading Engine Environment Configuration

# Server Configuration
PORT=3005
HOST=0.0.0.0
NODE_ENV=development

# Performance Targets
TARGET_LATENCY=10
MAX_LATENCY=50
CIRCUIT_BREAKER_THRESHOLD=10
CIRCUIT_BREAKER_TIMEOUT=30000

# Redis Configuration (for order queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# MT5 Data Bridge Integration
DATA_BRIDGE_URL=http://localhost:3002
DATA_BRIDGE_WS=ws://localhost:3002/ws

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=./logs

# Rate Limiting
ORDER_RATE_LIMIT=100
GENERAL_RATE_LIMIT=1000

# WebSocket Configuration
