{
  "name": "aitrading-test-suite",
  "version": "1.0.0",
  "description": "Comprehensive testing framework for AI Trading System",
  "main": "index.js",
  "scripts": {
    "test": "jest --config jest.config.js",
    "test:watch": "jest --watch --config jest.config.js",
    "test:coverage": "jest --coverage --config jest.config.js",
    "test:unit": "jest --testPathPattern=unit --config jest.config.js",
    "test:integration": "jest --testPathPattern=integration --config jest.config.js",
    "test:e2e": "jest --testPathPattern=e2e --config jest.config.js",
    "test:performance": "jest --testPathPattern=performance --config jest.config.js",
    "test:load": "artillery run tests/performance/load-test.yml",
    "test:security": "npm audit && jest --testPathPattern=security --config jest.config.js",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:performance",
    "test:ci": "jest --ci --coverage --watchAll=false --config jest.config.js",
    "mock:server": "json-server --watch tests/fixtures/mock-api.json --port 3001",
    "mock:mt5": "node tests/mocks/mt5-simulator.js",
    "generate:fixtures": "node tests/fixtures/generate-test-data.js",
    "validate:schemas": "ajv-cli validate -s tests/schemas/*.json -d tests/fixtures/*.json",
    "validate:pipeline": "node run-validation.js",
    "validate:ai-pipeline": "jest e2e/ai-pipeline-validation.test.js --config jest.config.js",
    "validate:ai-performance": "jest performance/ai-performance-benchmarks.test.js --config jest.config.js",
    "validate:full": "npm run test:coverage && npm run validate:pipeline",
    "validate:quick": "npm run validate:ai-pipeline --testTimeout=30000",
    "report:validation": "node reports/validation-report-generator.js",
    "clean:test": "rm -rf coverage .jest-cache test-results reports/ai-pipeline-validation-report.*"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@types/supertest": "^2.0.16",
    "@types/ws": "^8.5.9",
    "artillery": "^2.0.3",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "ws": "^8.14.2",
    "json-server": "^0.17.4",
    "ajv-cli": "^5.0.0",
    "faker": "^6.6.6",
    "mongodb-memory-server": "^9.1.1",
    "testcontainers": "^10.2.2",
    "playwright": "^1.40.0",
    "axios": "^1.6.0",
    "redis-memory-server": "^0.10.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/tests"],
    "testMatch": [
      "**/__tests__/**/*.+(ts|tsx|js)",
      "**/*.(test|spec).+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "collectCoverageFrom": [
      "../backend/**/*.{js,ts}",
      "../client/**/*.{js,ts}",
      "../web/**/*.{js,ts}",
      "!**/*.d.ts",
      "!**/node_modules/**",
      "!**/coverage/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "setupFilesAfterEnv": ["<rootDir>/tests/setup/jest.setup.js"],
    "testTimeout": 30000,
    "maxWorkers": 4
  }
}