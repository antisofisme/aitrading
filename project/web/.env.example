NEXT_PUBLIC_CHART_UPDATE_INTERVAL=100

# Security
NEXT_PUBLIC_ENABLE_CSP=true
NEXT_PUBLIC_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

