# AI Trading Platform Environment Configuration

# Multi-Database Architecture Configuration (Plan2)
# PostgreSQL (Primary Operational Database)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=aitrading_operational
POSTGRES_USER=aitrading
POSTGRES_PASSWORD=secure_password_here
POSTGRES_URL=postgresql://aitrading:secure_password_here@localhost:5432/aitrading_operational
POSTGRES_POOL_MAX=20
POSTGRES_IDLE_TIMEOUT=30000
POSTGRES_CONNECTION_TIMEOUT=2000

# DragonflyDB (High-Performance Cache/Memory Database)
DRAGONFLY_HOST=dragonflydb
DRAGONFLY_PORT=6379
DRAGONFLY_PASSWORD=secure_dragonfly_password
DRAGONFLY_URL=redis://:secure_dragonfly_password@localhost:6379
DRAGONFLY_MAX_RETRIES=3
DRAGONFLY_RETRY_DELAY=100

# ClickHouse (Time-Series Analytics Database)
CLICKHOUSE_HOST=clickhouse
CLICKHOUSE_PORT=8123
CLICKHOUSE_DB=aitrading_analytics
CLICKHOUSE_USER=aitrading
CLICKHOUSE_PASSWORD=secure_clickhouse_password
CLICKHOUSE_URL=http://aitrading:secure_clickhouse_password@localhost:8123/aitrading_analytics
CLICKHOUSE_POOL_MAX=10

# Weaviate (Vector/AI Database)
WEAVIATE_SCHEME=http
WEAVIATE_HOST=weaviate
WEAVIATE_PORT=8080
WEAVIATE_API_KEY=
WEAVIATE_URL=http://localhost:8080

# ArangoDB (Graph Database)
ARANGO_URL=http://arangodb:8529
ARANGO_DB=aitrading_graph
ARANGO_USER=root
ARANGO_PASSWORD=secure_arango_password
ARANGO_POOL_MAX=20

# MongoDB (Legacy - Configuration and Logs)
MONGO_HOST=mongodb
MONGO_PORT=27017
MONGO_USERNAME=admin
MONGO_PASSWORD=secure_mongo_password
MONGO_DATABASE=aitrading_logs
MONGO_AUTH_SOURCE=admin

# Security Configuration
JWT_SECRET=your_super_secret_jwt_key_minimum_32_characters
ENCRYPTION_KEY=your_encryption_key_for_sensitive_data
API_RATE_LIMIT=1000

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# MT5 Configuration (PC Client)
MT5_LOGIN=your_mt5_login
MT5_PASSWORD=your_mt5_password
MT5_SERVER=your_mt5_server

# API Keys (for external services)
OPENAI_API_KEY=your_openai_api_key
DEEPSEEK_API_KEY=your_deepseek_api_key
GOOGLE_AI_KEY=your_google_ai_key

# Telegram Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Monitoring Configuration
GRAFANA_PASSWORD=admin
PROMETHEUS_RETENTION=30d

# Development Configuration
NODE_ENV=development
LOG_LEVEL=info
DEBUG=false

# Business Configuration
SUBSCRIPTION_TIERS=free,basic,pro,enterprise
ML_INFERENCE_CACHE_TTL=300
MAX_CONCURRENT_USERS=1000

# Compliance Configuration
REGULATORY_REPORTING_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years
MiFID_II_ENABLED=true
EMIR_REPORTING=true

# Performance Configuration
DRAGONFLY_CACHE_TTL=3600
ML_MODEL_CACHE_SIZE=1000
DATABASE_POOL_SIZE=20
API_TIMEOUT_MS=30000

# Multi-Database Performance Settings
CLICKHOUSE_QUERY_TIMEOUT=30000
WEAVIATE_SEARCH_TIMEOUT=10000
ARANGO_TRANSACTION_TIMEOUT=30000
DRAGONFLY_COMMAND_TIMEOUT=5000