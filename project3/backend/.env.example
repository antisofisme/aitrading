# =======================================================================
# SUHO TRADING PLATFORM - CONFIGURATION TEMPLATE
# =======================================================================
# Copy this file to .env and update with your actual values
# This is the SINGLE SOURCE OF TRUTH for all system configurations

# === DATABASE CREDENTIALS ===
# IMPORTANT: Use strong, unique passwords for production
POSTGRES_PASSWORD=your_secure_postgres_password_here
CLICKHOUSE_PASSWORD=your_secure_clickhouse_password_here
DRAGONFLY_PASSWORD=your_secure_dragonfly_password_here
ARANGO_ROOT_PASSWORD=your_secure_arango_password_here
ARANGO_JWT_SECRET=your-arango-jwt-secret-change-in-production

# === SERVICE CONFIGURATIONS ===
NODE_ENV=development
PYTHONPATH=/app
HOT_RELOAD_ENABLED=false
COMPONENT_WATCH_ENABLED=false

# === POSTGRES CONNECTION DETAILS ===
POSTGRES_HOST=suho-postgresql
POSTGRES_PORT=5432
POSTGRES_DB=suho_trading
POSTGRES_USER=suho_admin

# === DRAGONFLY CONNECTION DETAILS ===
DRAGONFLY_HOST=suho-dragonflydb
DRAGONFLY_PORT=6379

# === CONNECTION STRINGS (auto-built from above) ===
DATABASE_URL=postgresql://suho_admin:${POSTGRES_PASSWORD}@suho-postgresql:5432/suho_trading
CACHE_URL=redis://:${DRAGONFLY_PASSWORD}@suho-dragonflydb:6379
NATS_URL=nats://suho-nats-server:4222
KAFKA_BROKERS=suho-kafka:9092

# === ADDITIONAL DATABASE CONFIGS ===
CLICKHOUSE_HOST=suho-clickhouse
CLICKHOUSE_PORT=8123
CLICKHOUSE_DB=suho_analytics
CLICKHOUSE_USER=default

# === DATA INGESTION ===
# Polygon.io API Key for real-time forex data
POLYGON_API_KEY=your_polygon_api_key_here
CLICKHOUSE_USER=suho_analytics

ARANGO_HOST=suho-arangodb
ARANGO_PORT=8529

WEAVIATE_HOST=suho-weaviate
WEAVIATE_PORT=8080

# === NATS CONFIGS ===
NATS_HOST=suho-nats-server
NATS_PORT=4222
NATS_CLUSTER_ID=trading-cluster

# === MESSAGING CONFIGS ===
KAFKA_CLIENT_ID=suho-trading-client
ZOOKEEPER_CONNECT=suho-zookeeper:2181

# === CORE SERVICES ===
CENTRAL_HUB_URL=http://suho-central-hub:7000
CENTRAL_HUB_HOST=suho-central-hub
CENTRAL_HUB_PORT=7000

# === API GATEWAY CONFIGS ===
API_GATEWAY_PORT=8000
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_ISSUER=suho-api-gateway
JWT_AUDIENCE=suho-trading
LOG_LEVEL=info
CORS_ENABLED=true
WEBSOCKET_ENABLED=true

# === POLYGON.IO DATA SOURCE ===
# Get your API key from: https://polygon.io/dashboard/api-keys
POLYGON_API_KEY=your-polygon-api-key-here

# === EXTERNAL DATA APIS ===
# FRED (Federal Reserve Economic Data) API
# Get your API key from: https://fred.stlouisfed.org/docs/api/api_key.html
FRED_API_KEY=your-fred-api-key-here

# Z.ai DevPack API for AI-Guided Web Scraping
# Get your API key from: https://docs.z.ai/devpack/overview
# FREE tier: 20-25 million tokens for new users
# Used for Economic Calendar AI scraper (Playwright + GLM model)
ZAI_API_KEY=your-zai-api-key-here

# === EXTERNAL SERVICES ===
# Optional: Leave empty to disable
TELEGRAM_BOT_TOKEN=

# === KAFKA SPECIFIC ===
KAFKAJS_NO_PARTITIONER_WARNING=1

# === MT5 TICK COLLECTOR CONFIGS ===
# Batch insert optimization (number of ticks before flush to ClickHouse)
MT5_COLLECTOR_BATCH_SIZE=100

# Polling interval in seconds (0.1 = 100ms)
MT5_COLLECTOR_POLL_INTERVAL=0.1

# Log level (DEBUG, INFO, WARNING, ERROR)
MT5_COLLECTOR_LOG_LEVEL=INFO

# VNC port for initial MT5 setup (access via VNC viewer)
MT5_COLLECTOR_VNC_PORT=5900

# MT5 Symbols to monitor (40 symbols from refined allocation)
# Format: comma-separated symbol list
MT5_SYMBOLS=EURUSD,USDJPY,USDCAD,XAUUSD,AUDJPY,EURGBP,GBPJPY,EURJPY,GBPUSD,AUDUSD,NZDUSD,USDCHF,USDCNH,EURAUD,EURNZD,EURCHF,GBPAUD,GBPNZD,GBPCHF,AUDNZD,AUDCHF,NZDCHF,NZDJPY,CHFJPY,CADJPY,AUDCAD,NZDCAD,EURCAD,XTIUSD,BTCUSD,ETHUSD

# =======================================================================
# SECURITY NOTES:
# 1. NEVER commit this file with real passwords to version control
# 2. Use strong, unique passwords for each service
# 3. Generate random JWT secrets: openssl rand -base64 32
# 4. Different passwords for different environments (dev/staging/prod)
# 5. Regularly rotate passwords and secrets
# =======================================================================

