{
  "service": {
    "name": "central-hub",
    "version": "3.0.0-contracts",
    "port": 7000,
    "host": "0.0.0.0",
    "environment": "production"
  },
  "contract_validation": {
    "enabled": true,
    "contracts_path": "../contracts",
    "validation_middleware": true,
    "response_formatting": true
  },
  "transport_methods": {
    "http": {
      "enabled": true,
      "default_port": 7000,
      "cors_enabled": true
    },
    "grpc": {
      "enabled": false,
      "default_port": 7001
    },
    "nats_kafka": {
      "enabled": false,
      "nats_url": "nats://suho-nats-server:4222",
      "kafka_brokers": ["suho-kafka:9092"]
    }
  },
  "service_registry": {
    "max_services": 100,
    "health_check_interval": 30,
    "cleanup_inactive_services": true
  },
  "caching": {
    "backend": "memory",
    "redis": {
      "host": "localhost",
      "port": 6379,
      "db": 0,
      "password": null
    },
    "memory": {
      "max_size": 1000,
      "default_ttl": 300
    }
  },
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "file": null
  },
  "security": {
    "api_key_required": false,
    "rate_limiting": {
      "enabled": false,
      "requests_per_minute": 100
    }
  }
}