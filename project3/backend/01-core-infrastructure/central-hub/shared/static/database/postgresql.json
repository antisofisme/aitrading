{
  "connection": {
    "host": "${POSTGRES_HOST}",
    "port": "${POSTGRES_PORT}",
    "database": "${POSTGRES_DB}",
    "user": "${POSTGRES_USER}",
    "password": "${POSTGRES_PASSWORD}",
    "ssl": false
  },
  "pool": {
    "min": 2,
    "max": 10,
    "acquire_timeout": 30000,
    "idle_timeout": 10000
  },
  "timescaledb": {
    "enabled": true,
    "hypertables": ["trades", "market_data", "performance_metrics"]
  }
}