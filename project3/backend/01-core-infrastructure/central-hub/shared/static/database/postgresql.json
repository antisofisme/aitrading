{
  "connection": {
    "host": "ENV:POSTGRES_HOST",
    "port": "ENV:POSTGRES_PORT",
    "database": "ENV:POSTGRES_DB",
    "user": "ENV:POSTGRES_USER",
    "password": "ENV:POSTGRES_PASSWORD",
    "ssl": false
  },
  "pool": {
    "min": 2,
    "max": 10,
    "acquire_timeout": 30000,
    "idle_timeout": 10000
  },
  "timescaledb": {
    "enabled": true,
    "hypertables": ["trades", "market_data", "performance_metrics"]
  }
}