{
  "connection": {
    "host": "suho-zookeeper",
    "port": 2181,
    "session_timeout": 30000,
    "connection_timeout": 15000,
    "operation_timeout": 10000
  },
  "settings": {
    "client_port": 2181,
    "tick_time": 2000,
    "init_limit": 10,
    "sync_limit": 5,
    "max_client_connections": 60,
    "max_session_timeout": 40000,
    "min_session_timeout": 4000
  },
  "paths": {
    "kafka": {
      "brokers": "/brokers/ids",
      "topics": "/brokers/topics",
      "config": "/config",
      "consumers": "/consumers"
    },
    "suho_trading": {
      "services": "/suho/services",
      "config": "/suho/config",
      "coordination": "/suho/coordination"
    }
  },
  "acl": {
    "enabled": false,
    "super_users": ["kafka", "admin"]
  },
  "monitoring": {
    "four_letter_words": ["ruok", "stat", "srvr", "isro"],
    "jmx_enabled": false,
    "log_level": "INFO"
  },
  "data": {
    "dir": "/var/lib/zookeeper/data",
    "log_dir": "/var/lib/zookeeper/log",
    "autopurge_snap_retain_count": 3,
    "autopurge_purge_interval": 24
  }
}