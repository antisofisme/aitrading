{
  "connection": {
    "host": "${DRAGONFLY_HOST}",
    "port": "${DRAGONFLY_PORT}",
    "password": "${DRAGONFLY_PASSWORD}",
    "database": 0,
    "ssl": false
  },
  "pool": {
    "min_connections": 2,
    "max_connections": 20,
    "retry_on_timeout": true,
    "connection_timeout": 5000,
    "command_timeout": 3000
  },
  "features": {
    "high_performance": true,
    "redis_compatible": true,
    "supports_modules": false,
    "memory_efficient": true
  },
  "cache_patterns": {
    "session": "session:*",
    "api_cache": "api:*",
    "market_data": "market:*",
    "user_data": "user:*"
  }
}