# API Gateway Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# WebSocket Ports
WEBSOCKET_TRADING_PORT=8001
WEBSOCKET_PRICE_STREAM_PORT=8002

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
JWT_EXPIRES_IN=24h
JWT_ISSUER=api-gateway
JWT_AUDIENCE=suho-trading

# NATS Configuration
NATS_SERVERS=nats://localhost:4222,nats://localhost:4223,nats://localhost:4224
NATS_RECONNECT_TIME_WAIT=250
NATS_MAX_RECONNECT_ATTEMPTS=-1
NATS_PING_INTERVAL=30000

# Kafka Configuration
KAFKA_CLIENT_ID=api-gateway
KAFKA_BROKERS=localhost:9092,localhost:9093,localhost:9094
KAFKA_RETRY_ATTEMPTS=8
KAFKA_RETRY_INITIAL_TIME=100

# Data Bridge Output Topics/Subjects
NATS_DATA_BRIDGE_SUBJECT=data-bridge.binary-input
KAFKA_DATA_BRIDGE_TOPIC=data-bridge-binary-input

# Central Hub Integration
CENTRAL_HUB_URL=http://localhost:3001
CENTRAL_HUB_API_KEY=your-central-hub-api-key

# Performance Configuration
MAX_CONNECTIONS_TRADING=1000
MAX_CONNECTIONS_PRICE_STREAM=2000
HEARTBEAT_INTERVAL=30000
CONNECTION_TIMEOUT=10000
MAX_RECONNECT_ATTEMPTS=5

# Security Configuration
ENABLE_CORS=true
ENABLE_HELMET=true
ENABLE_COMPRESSION=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring & Health
HEALTH_CHECK_INTERVAL=30000
METRICS_COLLECTION_INTERVAL=60000
PERFORMANCE_TRACKING_ENABLED=true

# Logging Configuration
LOG_FILE_MAX_SIZE=5242880
LOG_FILE_MAX_FILES=5
LOG_ENABLE_CONSOLE=true
LOG_ENABLE_FILE=true

# Binary Protocol Configuration
BINARY_PROTOCOL_ENABLED=true
BINARY_MAX_PACKET_SIZE=144
BINARY_VALIDATION_ENABLED=true
BINARY_MAGIC_NUMBER=0x53554854

# Database (if needed for session storage)
# DATABASE_URL=postgresql://user:password@localhost:5432/api_gateway
# REDIS_URL=redis://localhost:6379

# Development & Testing
ENABLE_DEBUG_MODE=false
ENABLE_PERFORMANCE_PROFILING=false
MOCK_EXTERNAL_SERVICES=false