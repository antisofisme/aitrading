# Error Handling
ML_PROCESSING_ERROR_HANDLING=true
ML_PROCESSING_MAX_RETRIES=3
ML_PROCESSING_RETRY_DELAY=5

# Health Checks
ML_PROCESSING_HEALTH_CHECK=true
ML_PROCESSING_HEALTH_CHECK_INTERVAL=600

# ===============================================
# üì± MICROSERVICE INTEGRATION
# ===============================================
MICROSERVICE_VERSION=2.0.0
CENTRALIZED_INFRASTRUCTURE=true
