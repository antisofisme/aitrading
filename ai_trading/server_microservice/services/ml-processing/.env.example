# ===============================================
# ü§ñ ML PROCESSING SERVICE - ENVIRONMENT CONFIGURATION
# ===============================================
# ML Processing microservice configuration
# Copy this file to .env and configure for your environment

# ===============================================
# üöÄ SERVICE CONFIGURATION
# ===============================================
ML_PROCESSING_SERVICE_NAME=ml-processing
ML_PROCESSING_SERVICE_DESCRIPTION=ML Processing microservice - Machine learning models, technical analysis, and realtime training
ML_PROCESSING_SERVICE_VERSION=1.0.0
MICROSERVICE_ENVIRONMENT=development
ML_PROCESSING_PORT=8003
ML_PROCESSING_DEBUG=false
ML_PROCESSING_HOST=0.0.0.0

# ===============================================
# üåê CORS CONFIGURATION
# ===============================================
CORS_ENABLED=true
CORS_ORIGINS=*

# ===============================================
# ‚ö° RATE LIMITING CONFIGURATION
# ===============================================
RATE_LIMITING_ENABLED=true
RATE_LIMITING_REQUESTS_PER_MINUTE=1500

# ===============================================
# üß† MACHINE LEARNING CONFIGURATION
# ===============================================
ML_MAX_CONCURRENT_MODELS=20
ML_MODEL_CACHE_SIZE=100
ML_TRAINING_TIMEOUT_SECONDS=3600
ML_INFERENCE_TIMEOUT_SECONDS=30

# ===============================================
# üìä TECHNICAL ANALYSIS CONFIGURATION
# ===============================================
TA_INDICATORS=rsi,macd,bollinger_bands,moving_averages,fibonacci
TA_TIMEFRAMES=1m,5m,15m,1h,4h,1d

# ===============================================
# ‚è∞ REALTIME TRAINING CONFIGURATION
# ===============================================
RT_TRAINING_ENABLED=true
RT_TRAINING_BATCH_SIZE=1000
RT_TRAINING_UPDATE_FREQUENCY_MINUTES=15
RT_TRAINING_MIN_SAMPLES_REQUIRED=10000

# ===============================================
# üéØ MODEL ENSEMBLE CONFIGURATION
# ===============================================
ENSEMBLE_MAX_MODELS=10
ENSEMBLE_VOTING_STRATEGY=weighted
ENSEMBLE_PERFORMANCE_THRESHOLD=0.7

# ===============================================
# üöÄ PERFORMANCE CONFIGURATION
# ===============================================
PERFORMANCE_GPU_ENABLED=false
PERFORMANCE_MAX_MEMORY_GB=8
PERFORMANCE_CONCURRENT_PROCESSES=4
PERFORMANCE_CACHE_TTL_SECONDS=1800

# ===============================================
# üì° MONITORING CONFIGURATION
# ===============================================
HEALTH_CHECK_INTERVAL=30
METRICS_ENABLED=true
PERFORMANCE_TRACKING_ENABLED=true
MONITORING_MODEL_PERFORMANCE_TRACKING=true

# ===============================================
# üóÑÔ∏è DATABASE CONFIGURATION
# ===============================================
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=ml_processing_db
DATABASE_USER=postgres
DATABASE_PASSWORD=

# ===============================================
# üîÑ CACHE CONFIGURATION (Redis)
# ===============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=5
REDIS_PASSWORD=

# ===============================================
# üìù LOGGING CONFIGURATION
# ===============================================
LOG_LEVEL=INFO
LOG_FORMAT=json
ENABLE_ML_LOGGING=true
ENABLE_TRAINING_LOGGING=true

# ===============================================
# üîí SECURITY CONFIGURATION
# ===============================================
ENABLE_AUTHENTICATION=false
API_KEY_HEADER=X-API-Key
ALLOWED_IPS=

# ===============================================
# üé® ML MODEL CONFIGURATIONS
# ===============================================

# CatBoost Configuration
ML_CATBOOST_ENABLED=true
ML_CATBOOST_ITERATIONS=1000
ML_CATBOOST_LEARNING_RATE=0.1
ML_CATBOOST_DEPTH=6
ML_CATBOOST_L2_LEAF_REG=3

# XGBoost Configuration
ML_XGBOOST_ENABLED=true
ML_XGBOOST_N_ESTIMATORS=100
ML_XGBOOST_LEARNING_RATE=0.1
ML_XGBOOST_MAX_DEPTH=6
ML_XGBOOST_SUBSAMPLE=0.8

# LightGBM Configuration
ML_LIGHTGBM_ENABLED=true
ML_LIGHTGBM_N_ESTIMATORS=100
ML_LIGHTGBM_LEARNING_RATE=0.1
ML_LIGHTGBM_MAX_DEPTH=6
ML_LIGHTGBM_NUM_LEAVES=31

# Random Forest Configuration
ML_RANDOM_FOREST_ENABLED=true
ML_RANDOM_FOREST_N_ESTIMATORS=100
ML_RANDOM_FOREST_MAX_DEPTH=10
ML_RANDOM_FOREST_MIN_SAMPLES_SPLIT=2

# Gradient Boost Configuration
ML_GRADIENT_BOOST_ENABLED=true
ML_GRADIENT_BOOST_N_ESTIMATORS=100
ML_GRADIENT_BOOST_LEARNING_RATE=0.1
ML_GRADIENT_BOOST_MAX_DEPTH=3

# SVM Configuration
ML_SVM_ENABLED=false
ML_SVM_KERNEL=rbf
ML_SVM_C=1.0
ML_SVM_GAMMA=scale

# Neural Network Configuration
ML_NEURAL_NETWORK_ENABLED=true
ML_NEURAL_NETWORK_HIDDEN_LAYERS=100,50
ML_NEURAL_NETWORK_ACTIVATION=relu
ML_NEURAL_NETWORK_SOLVER=adam
ML_NEURAL_NETWORK_MAX_ITER=1000

# ===============================================
# üîß FEATURE ENGINEERING CONFIGURATION
# ===============================================
FEATURE_ENGINEERING_ENABLED=true

# Technical Indicators
FEATURE_TECHNICAL_INDICATORS_ENABLED=true
FEATURE_TECHNICAL_INDICATORS=rsi,macd,bollinger_bands,moving_averages,fibonacci

# Lag Features
FEATURE_LAG_FEATURES_ENABLED=true
FEATURE_MAX_LAGS=10

# Rolling Features
FEATURE_ROLLING_FEATURES_ENABLED=true
FEATURE_ROLLING_WINDOWS=5,10,20,50

# Volatility Features
FEATURE_VOLATILITY_FEATURES_ENABLED=true
FEATURE_VOLATILITY_WINDOWS=10,20,30

# ===============================================
# üìà DATA PROCESSING CONFIGURATION
# ===============================================

# Preprocessing
DATA_SCALING_METHOD=standard
DATA_HANDLE_MISSING=interpolate
DATA_OUTLIER_DETECTION=iqr

# Validation
DATA_TRAIN_SPLIT=0.7
DATA_VALIDATION_SPLIT=0.15
DATA_TEST_SPLIT=0.15
DATA_TIME_SERIES_SPLIT=true

# ===============================================
# üéì MODEL TRAINING CONFIGURATION
# ===============================================

# Cross Validation
TRAINING_CROSS_VALIDATION_ENABLED=true
TRAINING_CV_FOLDS=5
TRAINING_CV_SCORING=neg_mean_squared_error

# Hyperparameter Tuning
TRAINING_HYPERPARAMETER_TUNING_ENABLED=true
TRAINING_TUNING_METHOD=grid_search
TRAINING_TUNING_CV_FOLDS=3

# Early Stopping
TRAINING_EARLY_STOPPING_ENABLED=true
TRAINING_EARLY_STOPPING_PATIENCE=10
TRAINING_EARLY_STOPPING_MIN_DELTA=0.001

# ===============================================
# üìä MODEL EVALUATION CONFIGURATION
# ===============================================

# Metrics
EVALUATION_REGRESSION_METRICS=mse,mae,r2,mape
EVALUATION_CLASSIFICATION_METRICS=accuracy,precision,recall,f1

# Backtesting
EVALUATION_BACKTESTING_ENABLED=true
EVALUATION_BACKTESTING_PERIODS=30,60,90

# Validation
EVALUATION_OUT_OF_SAMPLE=true
EVALUATION_WALK_FORWARD=true

# ===============================================
# üîê AUTHENTICATION & SERVICE SECRETS
# ===============================================
AUTH_ENABLED=false
JWT_SECRET_KEY=
JWT_ALGORITHM=HS256
JWT_TOKEN_EXPIRE_MINUTES=60

# Service-to-Service Authentication
API_GATEWAY_SERVICE_SECRET=
DATABASE_SERVICE_SECRET=
TRADING_ENGINE_SERVICE_SECRET=
AI_ORCHESTRATION_SERVICE_SECRET=
DEEP_LEARNING_SERVICE_SECRET=
DATA_BRIDGE_SERVICE_SECRET=

# ===============================================
# üåç ENVIRONMENT-SPECIFIC OVERRIDES
# ===============================================

# Development Environment
DEV_DEBUG=true
DEV_LOG_LEVEL=debug
DEV_GPU_ENABLED=false
DEV_MAX_CONCURRENT_MODELS=10

# Production Environment
PROD_DEBUG=false
PROD_LOG_LEVEL=info
PROD_GPU_ENABLED=true
PROD_MAX_CONCURRENT_MODELS=20

# Testing Environment
TEST_DEBUG=true
TEST_LOG_LEVEL=debug
TEST_GPU_ENABLED=false
TEST_MAX_CONCURRENT_MODELS=5

# ===============================================
# ‚öôÔ∏è ADVANCED ML PROCESSING SETTINGS
# ===============================================

# Model Storage
ML_PROCESSING_MODEL_STORAGE=true
ML_PROCESSING_MODEL_STORAGE_PATH=models/
ML_PROCESSING_MODEL_VERSIONING=true

# Prediction Settings
ML_PROCESSING_PREDICTION_ENABLED=true
ML_PROCESSING_PREDICTION_HORIZON=10
ML_PROCESSING_PREDICTION_CONFIDENCE=true

# Performance Monitoring
ML_PROCESSING_PERFORMANCE_MONITORING=true
ML_PROCESSING_PERFORMANCE_METRICS=accuracy,precision,recall,f1_score,mse,mae

# Database Integration
ML_PROCESSING_DATABASE_ENABLED=true
ML_PROCESSING_STORE_PREDICTIONS=true
