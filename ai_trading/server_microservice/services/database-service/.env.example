# Database Service Environment Variables
# Copy this file to .env and set your actual values

# Service Configuration
MICROSERVICE_ENVIRONMENT=development
DATABASE_SERVICE_PORT=8008
DATABASE_SERVICE_DEBUG=false
DATABASE_SERVICE_HOST=0.0.0.0

# CORS Configuration
CORS_ENABLED=true
CORS_ORIGINS=*

# Rate Limiting
RATE_LIMITING_ENABLED=true
RATE_LIMITING_REQUESTS_PER_MINUTE=5000

# Authentication
AUTH_ENABLED=false
JWT_SECRET_KEY=your_jwt_secret_key_here_minimum_32_characters
JWT_ALGORITHM=HS256
JWT_TOKEN_EXPIRE_MINUTES=60
API_KEY_AUTH_ENABLED=true

# PostgreSQL Database Configuration
POSTGRESQL_ENABLED=true
POSTGRESQL_HOST=localhost
POSTGRESQL_PORT=5432
POSTGRESQL_DATABASE=main_db
POSTGRESQL_USER=postgres
POSTGRESQL_PASSWORD=your_postgresql_password_here
POSTGRESQL_MAX_CONNECTIONS=50
POSTGRESQL_MIN_CONNECTIONS=10
POSTGRESQL_QUERY_TIMEOUT=30

# ClickHouse Database Configuration
CLICKHOUSE_ENABLED=true
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8123
CLICKHOUSE_DATABASE=analytics_db
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=your_clickhouse_password_here
CLICKHOUSE_MAX_CONNECTIONS=20
CLICKHOUSE_MIN_CONNECTIONS=5
CLICKHOUSE_QUERY_TIMEOUT=60

# Weaviate Vector Database Configuration
WEAVIATE_ENABLED=true
WEAVIATE_HOST=localhost
WEAVIATE_PORT=8080
WEAVIATE_API_KEY=your_weaviate_api_key_here
WEAVIATE_VECTOR_DIMENSIONS=1536
WEAVIATE_SIMILARITY_THRESHOLD=0.7

# ArangoDB Graph Database Configuration
ARANGODB_ENABLED=true
ARANGODB_HOST=localhost
ARANGODB_PORT=8529
ARANGODB_DATABASE=graph_db
ARANGODB_USER=root
ARANGODB_PASSWORD=your_arangodb_password_here
ARANGODB_GRAPH_COLLECTIONS=users,projects,workflows

# DragonflyDB Cache Configuration
DRAGONFLYDB_ENABLED=true
DRAGONFLYDB_HOST=localhost
DRAGONFLYDB_PORT=6379
DRAGONFLYDB_PASSWORD=your_dragonflydb_password_here
DRAGONFLYDB_CACHE_TTL_SECONDS=3600
DRAGONFLYDB_MAX_MEMORY_MB=2048

# Schema Management Configuration
SCHEMAS_AUTO_MIGRATION=true
SCHEMAS_BACKUP_ENABLED=true
SCHEMAS_VALIDATION_ENABLED=true

# Performance Configuration
PERFORMANCE_QUERY_CACHE_ENABLED=true
PERFORMANCE_QUERY_CACHE_TTL_SECONDS=300
PERFORMANCE_CONNECTION_TIMEOUT_SECONDS=30
PERFORMANCE_BULK_INSERT_BATCH_SIZE=1000

# Monitoring Configuration
MONITORING_SLOW_QUERY_THRESHOLD_MS=1000
MONITORING_CONNECTION_MONITORING=true
MONITORING_PERFORMANCE_LOGGING=true
HEALTH_CHECK_INTERVAL=30
METRICS_ENABLED=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
ENABLE_QUERY_LOGGING=true
ENABLE_CONNECTION_LOGGING=true

# Security Configuration
ENABLE_AUTHENTICATION=false
API_KEY_HEADER=X-API-Key
ALLOWED_IPS=
SSL_ENABLED=false
DATABASE_SERVICE_API_KEY=your_database_service_api_key_here

# Service-to-Service Authentication Secrets
API_GATEWAY_SERVICE_SECRET=your_api_gateway_service_secret_here
DATA_BRIDGE_SERVICE_SECRET=your_data_bridge_service_secret_here
TRADING_ENGINE_SERVICE_SECRET=your_trading_engine_service_secret_here
AI_ORCHESTRATION_SERVICE_SECRET=your_ai_orchestration_service_secret_here
ML_PROCESSING_SERVICE_SECRET=your_ml_processing_service_secret_here

# Service Endpoints (optional overrides)
API_GATEWAY_URL=http://api-gateway:8000
DATA_BRIDGE_URL=http://data-bridge:8002
TRADING_ENGINE_URL=http://trading-engine:8010
AI_ORCHESTRATION_URL=http://ai-orchestration:8004
ML_PROCESSING_URL=http://ml-processing:8006

# Database Connection URLs (alternative to individual settings)
POSTGRESQL_URL=postgresql://postgres:password@localhost:5432/main_db
CLICKHOUSE_URL=http://default:password@localhost:8123/analytics_db
ARANGODB_URL=http://root:password@localhost:8529
WEAVIATE_URL=http://localhost:8080
DRAGONFLYDB_URL=redis://:password@localhost:6379