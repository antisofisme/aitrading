# API Gateway Service Environment Variables
# Copy this file to .env and set your actual values

# Service Configuration
MICROSERVICE_ENVIRONMENT=development
API_GATEWAY_PORT=8000
API_GATEWAY_DEBUG=false
API_GATEWAY_HOST=0.0.0.0

# CORS Configuration
CORS_ENABLED=true
CORS_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMITING_ENABLED=true
RATE_LIMITING_REQUESTS_PER_MINUTE=1000
RATE_LIMITING_WINDOW_SECONDS=60
RATE_LIMITING_MAX_REQUESTS=100

# Authentication
AUTH_ENABLED=true
JWT_SECRET_KEY=your_jwt_secret_key_here_minimum_32_characters
JWT_ALGORITHM=HS256
JWT_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Service-to-Service Authentication Secrets
AI_ORCHESTRATION_SERVICE_SECRET=your_ai_orchestration_service_secret_here
DATA_BRIDGE_SERVICE_SECRET=your_data_bridge_service_secret_here
ML_PROCESSING_SERVICE_SECRET=your_ml_processing_service_secret_here
TRADING_ENGINE_SERVICE_SECRET=your_trading_engine_service_secret_here
DATABASE_SERVICE_SECRET=your_database_service_secret_here

# Backend Services Configuration
MT5_BRIDGE_URL=http://mt5-bridge:8001
MT5_BRIDGE_TIMEOUT=30
MT5_BRIDGE_ENABLED=true

TRADING_ENGINE_URL=http://trading-engine:8002
TRADING_ENGINE_TIMEOUT=30
TRADING_ENGINE_ENABLED=true

DATABASE_SERVICE_URL=http://database-service:8003
DATABASE_SERVICE_TIMEOUT=30
DATABASE_SERVICE_ENABLED=true

AI_ORCHESTRATION_URL=http://ai-orchestration:8004
AI_ORCHESTRATION_TIMEOUT=30
AI_ORCHESTRATION_ENABLED=true

AI_PROVIDER_URL=http://ai-provider:8005
AI_PROVIDER_TIMEOUT=30
AI_PROVIDER_ENABLED=true

ML_PROCESSING_URL=http://ml-processing:8006
ML_PROCESSING_TIMEOUT=30
ML_PROCESSING_ENABLED=true

DEEP_LEARNING_URL=http://deep-learning:8007
DEEP_LEARNING_TIMEOUT=30
DEEP_LEARNING_ENABLED=true

# Monitoring
HEALTH_CHECK_INTERVAL=30
METRICS_ENABLED=true
PERFORMANCE_TRACKING_ENABLED=true
LOG_REQUESTS_ENABLED=true

# Security
TRUSTED_HOSTS=*
ENABLE_SECURITY_HEADERS=true
MAX_REQUEST_SIZE=10485760

# Database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=api_gateway_db
DATABASE_USER=postgres
DATABASE_PASSWORD=your_database_password_here

# Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your_redis_password_here
DRAGONFLYDB_URL=redis://dragonflydb:6379

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
ENABLE_REQUEST_LOGGING=true
ENABLE_PERFORMANCE_LOGGING=true