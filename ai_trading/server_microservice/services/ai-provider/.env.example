# AI Provider Service Environment Variables
# Copy this file to .env and set your actual values

# Service Configuration
MICROSERVICE_ENVIRONMENT=development
AI_PROVIDER_PORT=8005
AI_PROVIDER_DEBUG=false
AI_PROVIDER_HOST=0.0.0.0

# CORS Configuration
CORS_ENABLED=true
CORS_ORIGINS=*

# Rate Limiting
RATE_LIMITING_ENABLED=true
RATE_LIMITING_REQUESTS_PER_MINUTE=3000

# LiteLLM Configuration
LITELLM_ENABLED=true
LITELLM_MODEL_ROUTING=true
LITELLM_COST_OPTIMIZATION=true
LITELLM_FALLBACK_MODELS=true
LITELLM_BASE_URL=

# AI Provider Credentials
OPENAI_ENABLED=true
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_RATE_LIMIT_RPM=500

ANTHROPIC_ENABLED=true
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_BASE_URL=https://api.anthropic.com
ANTHROPIC_RATE_LIMIT_RPM=300

GOOGLE_ENABLED=true
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_BASE_URL=https://generativelanguage.googleapis.com
GOOGLE_RATE_LIMIT_RPM=200

LOCAL_ENABLED=false
LOCAL_BASE_URL=http://localhost:8080
LOCAL_RATE_LIMIT_RPM=100

# Cost Management
COST_TRACKING_ENABLED=true
COST_BUDGET_ALERTS=true
COST_PER_REQUEST_LIMIT=0.10
DAILY_BUDGET_LIMIT=100.0
MONTHLY_BUDGET_LIMIT=3000.0

# Performance
REQUEST_TIMEOUT_SECONDS=120
RETRY_ATTEMPTS=3
CONCURRENT_REQUESTS=50
CACHE_RESPONSES=true
CACHE_TTL_SECONDS=300

# Monitoring
HEALTH_CHECK_INTERVAL=30
METRICS_ENABLED=true
PERFORMANCE_TRACKING_ENABLED=true
LOG_REQUESTS_ENABLED=true

# Security
ENABLE_AUTHENTICATION=false
API_KEY_HEADER=X-API-Key
ALLOWED_IPS=

# Database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=ai_provider_db
DATABASE_USER=postgres
DATABASE_PASSWORD=your_database_password_here

# Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=1
REDIS_PASSWORD=your_redis_password_here

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
ENABLE_REQUEST_LOGGING=true
ENABLE_PERFORMANCE_LOGGING=true