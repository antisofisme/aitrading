# Application Configuration
NODE_ENV=development
PORT=8000
API_VERSION=v1

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Database Configuration
# PostgreSQL (Primary)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=aitrading
POSTGRES_USER=aitrading_user
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_SSL=false
POSTGRES_POOL_MIN=2
POSTGRES_POOL_MAX=20

# ClickHouse (Analytics)
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8123
CLICKHOUSE_DB=aitrading_analytics
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=
CLICKHOUSE_SECURE=false

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_CLUSTER=false

# MT5 Integration Configuration
MT5_WEBSOCKET_HOST=localhost
MT5_WEBSOCKET_PORT=8001
MT5_CONNECTION_TIMEOUT=5000
MT5_RETRY_ATTEMPTS=3
MT5_POOL_SIZE=5

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Logging Configuration
LOG_LEVEL=info
LOG_MAX_FILES=30d
LOG_MAX_SIZE=100mb
LOG_COMPRESS=true

# Subscription Tiers Configuration
BASIC_TIER_PRICE=49
PRO_TIER_PRICE=199
ENTERPRISE_TIER_PRICE=999
BASIC_TIER_FEATURES=basic_signals,email_support
PRO_TIER_FEATURES=advanced_signals,priority_support,api_access
ENTERPRISE_TIER_FEATURES=all_features,dedicated_support,custom_integration

# Error DNA Configuration
ERROR_DNA_ENABLED=true
ERROR_DNA_API_KEY=your_error_dna_api_key
ERROR_DNA_PROJECT_ID=aitrading-backend

# Monitoring Configuration
HEALTH_CHECK_INTERVAL=30000
PERFORMANCE_MONITORING=true
AUDIT_LOGGING=true

# Zero-Trust Security
MUTUAL_TLS_ENABLED=false
CERTIFICATE_PATH=./certs/
PRIVATE_KEY_PATH=./certs/private/
SECURITY_HEADERS_ENABLED=true
CSP_ENABLED=true