{
  "name": "mermaid-claude-flow-integration",
  "version": "1.0.0",
  "description": "Comprehensive Mermaid.js integration with Claude Flow MCP for auto-diagram generation in AI trading systems",
  "main": "mcp-servers/mermaid-server.js",
  "type": "module",
  "scripts": {
    "start": "node mcp-servers/mermaid-server.js",
    "start:mcp": "node mcp-servers/mermaid-server.js",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest --testMatch='**/tests/unit/**/*.test.js'",
    "test:integration": "jest --testMatch='**/tests/integration/**/*.test.js'",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write src/**/*.js",
    "generate:docs": "node scripts/generate-docs.js",
    "analyze": "node scripts/analyze-codebase.js",
    "demo": "node examples/demo.js",
    "setup": "npm install && npm run setup:mcp",
    "setup:mcp": "echo 'Add MCP server to Claude Code config'",
    "build": "npm run lint && npm run test",
    "clean": "rm -rf docs/diagrams/* logs/*",
    "benchmark": "node scripts/benchmark.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@babel/parser": "^7.23.0",
    "@babel/traverse": "^7.23.0",
    "@babel/types": "^7.23.0",
    "chokidar": "^3.5.3",
    "glob": "^10.3.0"
  },
  "devDependencies": {
    "@mermaid-js/mermaid-cli": "^10.6.0",
    "jest": "^29.7.0",
    "eslint": "^8.52.0",
    "prettier": "^3.0.3",
    "nodemon": "^3.0.0"
  },
  "peerDependencies": {
    "claude-flow": "^2.0.0-alpha"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "mermaid",
    "diagrams",
    "claude-flow",
    "mcp",
    "trading",
    "architecture",
    "documentation",
    "auto-generation",
    "ai",
    "visualization"
  ],
  "author": "AI Trading System",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/mermaid-claude-flow.git"
  },
  "mcp": {
    "server": {
      "name": "mermaid-diagram-server",
      "version": "1.0.0",
      "entry": "mcp-servers/mermaid-server.js",
      "capabilities": [
        "diagram-generation",
        "code-analysis",
        "workflow-automation",
        "claude-flow-integration"
      ]
    }
  },
  "claudeFlow": {
    "integration": {
      "enabled": true,
      "hooks": [
        "pre-task",
        "post-task",
        "post-edit",
        "session-restore",
        "session-end"
      ],
      "memory": {
        "namespace": "mermaid-diagrams",
        "ttl": 86400
      }
    }
  }
}